# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
tab_width = 2

# Tab indentation (no size specified)
[*.js]
indent_style = space
tab_width = 2

# Ruby indentation
[*.rb]
indent_style = space
tab_width = 2

# YAML does not like tabs...
[*.yml]
indent_style = space
tab_width = 2

[*.html]
indent_style = space
tab_width = 2
